{
  "name": "kiosk-app",
  "version": "1.0.0",
  "description": "Kiosk display application for home/office use",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "node tests/puppeteer/puppeteer-test.js",
    "deploy": "bash scripts/deploy.sh",
    "start-tests": "node tests/start-and-test.js",
    "run-puppeteer-test": "./tests/puppeteer/run-puppeteer-test.sh",
    "test:manual": "npm run dev"
  },
  "keywords": [
    "kiosk",
    "dashboard",
    "display"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.24.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "@vitejs/plugin-react": "^4.0.4",
    "autoprefixer": "^10.4.16",
    "eslint": "^9.24.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "postcss": "^8.4.32",
    "preact": "^10.19.3",
    "puppeteer": "^24.6.0",
    "tailwindcss": "^3.4.0",
    "typescript": "^5.1.6",
    "typescript-eslint": "^8.29.0",
    "vite": "^6.2.5"
  }
}
